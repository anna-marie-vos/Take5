<div class="container">
  <header class="pageTitle">
    <h1 class="Title">
      {{projectData.project_name}} Safety Information
    </h1>
    <nav>
      <a class="link" href="/index/{{projectData.project_id}}/hazard_log">Project Hazard Log</a>
      <a class="link" href="/index">Home</a>
    </nav>
  </header>
  <div class ="project">
    <h2>
      Project Description
    </h2>
    <table>
      <tr> <th>Headings:</th><td>Desciptions:</th> </tr>
      <tr> <th>Project Name: </th><td>{{projectData.project_name}}</th> </tr>
      <tr> <th>Location: </th><td>{{projectData.location}}</th> </tr>
      <tr> <th>SWMS: </th><td>{{projectData.SWMS}}</th> </tr>
      <tr> <th>Important Notices: </th><td>{{projectData.important_Notices}}</th> </tr>
    </table>
  </div>

  <div class="PPEGear">
    <h2>Site Required PPE Gear: </h2>
    <table>
      <tr> <th>PPE Item:</th><th>Image:</th></tr>
      {{#each ppeData}}
      <tr> <td>{{ppe_name}}</td><td><img src="{{ppe_image}}" alt="ppe_name"></td></tr>
      {{/each}}
    </table>

  </div>

</div>
